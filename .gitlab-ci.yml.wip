destroy_development:
  stage: deploy_to_development
  when: manual
  variables:
     env_name : dev
  environment:
    name: development
    action: stop
  tags:
    - TF_panelapp_dev
  before_script:
    - wget -q 169.254.170.2$AWS_CONTAINER_CREDENTIALS_RELATIVE_URI -O aws_creds
    - export AWS_ACCESS_KEY_ID=$(jq -r '.AccessKeyId' aws_creds)
    - export AWS_SECRET_ACCESS_KEY=$(jq -r '.SecretAccessKey' aws_creds)
    - export AWS_SESSION_TOKEN=$(jq -r '.Token' aws_creds)
    - export AWS_DEFAULT_REGION=$default_region
    - git clone --single-branch --branch $INFRA_REF_TAG  https://gitlab.com/genomicsengland/panelapp/panelapp-infra.git
    - git clone https://$INFRA_DEPLOY_TOKEN_USERNAME:$TF_INFRA_REPO_TOKEN@gitlab.com/genomicsengland/panelapp/panelapp-config.git # FIXME - Branch will be removed once branch merged to master.
  script:
    - export WORKING_DIR=$(pwd)
    - cd $PANNELAPP_TF_DIR; terraform init -backend-config "$WORKING_DIR/panelapp-config/$env_name/panelapp/backend.conf" && terraform plan -var-file="$WORKING_DIR/panelapp-config/$env_name/panelapp/terraform.tfvars" -var 'create_aurora=false' #&& terraform apply -auto-approve -var-file="$WORKING_DIR/panelapp-config/$env_name/panelapp/terraform.tfvars" -var 'image_tag=latest'

